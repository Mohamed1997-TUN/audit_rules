{% if srcintf == "port2" and dstintf == "port1" %}
config firewall policy
    edit 1
        set name "{{ policy_name }}"
        set srcintf "{{ srcintf }}"
        set dstintf "{{ dstintf }}"
        set action {{ policy_action }}
        set srcaddr "{{ srcaddr }}"
        set dstaddr "{{ dstaddr }}"
        set schedule "{{ schedule }}"
        set service "{{ service }}"
        set nat {{ nat }}
    next
end
{% else %}
{% set error_message = "‚ùå Not allowed: traffic from " + srcintf + " to " + dstintf + " is denied by policy." %}
{{ error_message }}
{% endif %}



